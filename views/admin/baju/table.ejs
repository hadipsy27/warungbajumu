<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-outline-primary btn-sm"
        data-toggle="modal"
        data-target="#add-modal"
      >
        Add
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Nama Baju</th>
              <th>Lingkar Dada</th>
              <th>Panjang</th>
              <th>Kondisi</th>
              <th>Harga</th>
              <th>Deskripsi</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < baju.length; i++) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= baju[i].nama %></td>
                <td><%= baju[i].lingkar_dada %></td>
                <td><%= baju[i].panjang %></td>
                <td><%= baju[i].kondisi %></td>
                <td><%= baju[i].harga %></td>
                <td><%= baju[i].deskripsi %></td>
                <td class="text-center">
                  <a href="#" class="btn btn-outline-warning btn-sm button-update">Edit</a>
                  <button type="submit" class="btn btn-outline-danger btn-sm">
                    Delete
                  </button>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>